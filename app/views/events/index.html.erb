
<%= link_to 'New Event', new_event_path %>
<br>
<br>
<table border="1">
<thead>
   <tr>
     <th>Date</th>
     <th>Location</th>
     <th>Description</th>
     <th>Capacity</th>
     <th>Requires ID</th>
     <th>Modify</th>
 </thead>

 <tbody>
  <% @events.each do |event| %>
    <tr>
      <td><%= event.date %> </td>
      <td><%= event.location %> </td>
      <td><%= link_to event.description, event %> </td>
      <td><%= event.capacity %> </td>
      <td><%= event.requires_id %> </td>
      <td><%= link_to 'Edit', edit_event_path(event) %>
          <%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
